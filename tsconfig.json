{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "erasableSyntaxOnly": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "types": ["obsidian-typings"]
  },
  "exclude": ["node_modules", "dist", "test/__mocks__"],
  "include": ["**/*.ts", "eslint.config.ts"]
}
